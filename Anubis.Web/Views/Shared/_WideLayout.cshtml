<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
</head>
@{
    var currentControllerName = ViewContext.RouteData.Values["controller"].ToString().ToLower();
    var appsActive = currentControllerName.StartsWith("application") || currentControllerName.StartsWith("log") ? "active" : null;
}
<body>
    <div class="navbar">
        <div class="navbar-inner">
            <a class="brand" href="#" style="margin-left: -5px;">Logging Central</a>
            <ul class="nav pull-right">
                <li class="@appsActive"><a href="@Url.Action("Index", "Applications")">Applications</a></li>
                <li><a href="@Url.Action("LogOff", "Account")">Log Off</a></li>
            </ul>
        </div>
    </div>
    <div style="margin-left: 30px; margin-right: 30px;">
        <div style="width: 100%; border-bottom: 1px solid #888; margin-bottom:10px;">
            <div class="pull-left">
                <h1>@ViewBag.Title</h1>
            </div>
            <div class="pull-right">
                @RenderSection("BarButton", false)
            </div>
            <div class="clearfix"></div>
        </div>
        <div>
            @RenderBody()
        </div>

        <hr>

        <div class="footer">
            <p>&copy; Logging Central 2013</p>
        </div>

    </div>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-39052170-1']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

</script>
</body>
</html>
